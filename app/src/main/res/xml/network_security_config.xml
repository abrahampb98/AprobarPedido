<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración para permitir tráfico no cifrado en general -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Usa los certificados confiables del sistema -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Configuración específica para dominios de Google Maps -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">maps.googleapis.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <!-- Empresa -->
    <TextView
        android:id="@+id/txtEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cotzul S.A."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- TÃ­tulo Rentabilidad -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rentabilidad"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtEmpresa"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp" />

    <!-- Fecha Hoy -->
    <TextView
        android:id="@+id/txtFechaHoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Hoy: 1-10-2025"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/spinnerTipoRentabilidad"
        style="@style/Widget.Button.Custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:spinnerMode="dropdown"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtFechaHoy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- BotÃ³n Fecha Inicio -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFechaIni"
        style="@style/Widget.Button.Custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="FECHA INI: 1/10/2025"
        app:layout_constraintTop_toBottomOf="@id/spinnerTipoRentabilidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- BotÃ³n Fecha Fin -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFechaFin"
        style="@style/Widget.Button.Custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="FECHA FIN: 1/10/2025"
        app:layout_constraintTop_toBottomOf="@id/btnFechaIni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- BotÃ³n Buscar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuscarRentabilidad"
        style="@style/Widget.Button.Custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="BUSCAR RENTABILIDAD"
        app:layout_constraintTop_toBottomOf="@id/btnFechaFin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <!-- ðŸ”¹ CONTENEDOR PRINCIPAL (cabeceras + detalles) -->
    <LinearLayout
        android:id="@+id/contenedorCabecerasPadre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuscarRentabilidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- ðŸ”¹ FILA DE CABECERAS -->
        <LinearLayout
            android:id="@+id/filaCabeceras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#EEEEEE"
            android:elevation="2dp">

            <!-- ðŸ§± Cabeceras fijas -->
            <LinearLayout
                android:id="@+id/contenedorCabecerasFijas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!-- ðŸ§­ Cabeceras desplazables -->
            <HorizontalScrollView
                android:id="@+id/scrollCabeceras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/contenedorCabecerasScroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>

        <!-- ðŸ”¹ FILA DE DETALLES -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/filaDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- ðŸ§± Detalles fijos -->
                <LinearLayout
                    android:id="@+id/contenedorDetallesFijos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- ðŸ§­ Detalles desplazables -->
                <HorizontalScrollView
                    android:id="@+id/scrollDetalles"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/contenedorDetallesScroll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </HorizontalScrollView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/background">

    <!-- ðŸ”¹ TÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ObservaciÃ³n Pedido"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center" />

    <!-- ðŸ”¹ Campo de texto multilinea -->
    <EditText
        android:id="@+id/inputObservacion"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/edit_text"
        android:gravity="top|start"
        android:hint="Ingrese una Observacion..."
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:padding="8dp"
        android:textSize="15sp"
        android:textColor="#333333" />

    <!-- ðŸ”¹ Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:weightSum="2"
        android:paddingHorizontal="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarObs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancelar"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:cornerRadius="18dp"
            app:elevation="3dp"
            app:backgroundTint="#F3C94F" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarObs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Guardar"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:cornerRadius="18dp"
            app:elevation="3dp"
            app:backgroundTint="#F3C94F" />
    </LinearLayout>

</LinearLayout>
